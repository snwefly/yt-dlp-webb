# YT-DLP Web 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# 基本配置
# ===========================================

# 应用版本（自动设置，无需修改）
VERSION=latest
REVISION=

# Web服务配置
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Python环境配置
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ===========================================
# 下载配置
# ===========================================

# 默认下载目录
DOWNLOAD_DIR=/app/downloads

# 最大并发下载数
MAX_CONCURRENT_DOWNLOADS=3

# 默认视频质量
DEFAULT_VIDEO_QUALITY=best

# 默认音频质量
DEFAULT_AUDIO_QUALITY=best

# ===========================================
# 安全配置
# ===========================================

# API密钥（可选，用于API访问控制）
# API_KEY=your-secret-api-key

# 允许的主机列表（用逗号分隔）
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS配置
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=/app/logs/app.log

# 是否启用访问日志
ENABLE_ACCESS_LOG=true

# ===========================================
# 数据库配置（如果使用）
# ===========================================

# 数据库类型 (sqlite, postgresql, mysql)
# DATABASE_TYPE=sqlite

# SQLite数据库文件路径
# DATABASE_URL=sqlite:///app/data/app.db

# PostgreSQL配置示例
# DATABASE_URL=postgresql://user:password@localhost:5432/ytdlp_web

# MySQL配置示例
# DATABASE_URL=mysql://user:password@localhost:3306/ytdlp_web

# ===========================================
# Redis配置（用于任务队列，可选）
# ===========================================

# Redis连接URL
# REDIS_URL=redis://localhost:6379/0

# 任务队列名称
# QUEUE_NAME=ytdlp_downloads

# ===========================================
# 文件存储配置
# ===========================================

# 最大文件大小 (字节)
MAX_FILE_SIZE=5368709120  # 5GB

# 允许的文件类型
ALLOWED_EXTENSIONS=mp4,mp3,webm,mkv,avi,mov,flv,m4a,wav,flac

# 文件清理配置
AUTO_CLEANUP_ENABLED=false
CLEANUP_AFTER_DAYS=7

# ===========================================
# 监控和性能
# ===========================================

# 是否启用性能监控
ENABLE_METRICS=false

# 监控端点路径
METRICS_PATH=/metrics

# 健康检查端点
HEALTH_CHECK_PATH=/health

# ===========================================
# 外部服务配置
# ===========================================

# 代理配置（可选）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# 通知配置（可选）
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# ===========================================
# 开发配置
# ===========================================

# 开发模式
DEBUG=false

# 热重载
AUTO_RELOAD=false

# 模板缓存
TEMPLATE_CACHE=true

# 静态文件缓存
STATIC_CACHE=true

# ===========================================
# Docker特定配置
# ===========================================

# 容器时区
TZ=Asia/Shanghai

# 用户ID和组ID（用于文件权限）
PUID=1000
PGID=1000

# ===========================================
# 备份配置
# ===========================================

# 自动备份
AUTO_BACKUP_ENABLED=false

# 备份间隔（小时）
BACKUP_INTERVAL=24

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# 备份存储路径
BACKUP_PATH=/app/backups
