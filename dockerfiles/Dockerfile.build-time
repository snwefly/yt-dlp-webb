    chown ytdlp:ytdlp /app/downloads /app/logs /app/yt-dlp-cache && \
    echo "âœ… æ„å»ºæ—¶ä¸‹è½½æ¨¡å¼é…ç½®å®Œæˆ"

# åˆ‡æ¢ç”¨æˆ·
USER ytdlp

