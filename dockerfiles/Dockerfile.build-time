# åˆ›å»ºç”¨æˆ·
RUN groupadd -r ytdlp && useradd -r -g ytdlp -u 1000 ytdlp

# å®‰è£…ç³»ç»Ÿä¾èµ–
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    wget \
    ca-certificates \
    dos2unix \
