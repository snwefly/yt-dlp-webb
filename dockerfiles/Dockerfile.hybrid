    chown -R ytdlp:ytdlp /app && \
    chmod -R 755 /app && \
    chmod 777 /app/downloads && \
    echo "âœ… æ··åˆæ¨¡å¼é…ç½®å®Œæˆ"

# åˆ‡æ¢ç”¨æˆ·
