# åˆ›å»ºç”¨æˆ·
RUN groupadd -r ytdlp && useradd -r -g ytdlp -u 1000 ytdlp

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼ˆåŒ…å«ä¸‹è½½å·¥å…·ä»¥å¤‡è¿è¡Œæ—¶ä½¿ç”¨ï¼‰
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    wget \
